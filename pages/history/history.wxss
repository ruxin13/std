page{
  width: 100%;
  height: 100%;
}
.his-bg{
  width: 100%;
  height: 100%;
  background-size: 100%;
  background-position: center top;
  background-repeat: no-repeat;
  padding-top: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-direction: column;
}
.his-tit{
  margin: 0 auto;
  display: block;
  width: 598rpx;
  height: 100rpx;
}
.his-stit{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 44rpx;
}
.his-stit-txt{
  font-size: 28rpx;
  color: #FFFFFF;
}
.his-info{
  width: 32rpx;
  height: 32rpx;
  margin-left: 8rpx;
}
.his-main{
  width: 642rpx;
  flex: 1;
  background: #FFFFFF;
  box-shadow: 0 64rpx 168rpx 40rpx rgba(74,74,74,0.08);
  border-radius: 12rpx;
  margin: 0 auto 40rpx;
  box-sizing: border-box;
  padding: 80rpx 0 60rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}
.his-date{
  display: flex;
  align-items: flex-start;
  justify-content: center;
  position: relative;
}
.his-row{
  display: flex;
  align-items: flex-start;
  justify-content: center;
  position: relative;
}
.his-space{
  display: flex;
  align-items: flex-start;
  justify-content: center;
  position: relative;
}
.his-l{
  width: 274rpx;
  box-sizing: border-box;
  text-align: right;
  padding-right: 54rpx;
  font-size: 24rpx;
  color: #333333;
}
.his-r{
  flex: 1;
  border-left: solid 4rpx #FF7D76;
  box-sizing: border-box;
  padding-left: 56rpx;
  font-size: 24rpx;
  color: #333333;
}
.his-c{
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-image: linear-gradient(-151deg, #FD7292 0%, #FD5E2C 100%);
  position: absolute;
  top: .3em;
  left: 269rpx;
  z-index: 5;
}
.his-icon-r{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 0;
  left: 260rpx;
  z-index: 6;
}
.his-date .his-l{
  font-size: 28rpx;
  color: #2A2A30;
  font-weight: 600;
}
.his-date .his-m-tit{
  font-size: 28rpx;
  color: #2A2A30;
  font-weight: 600;
  padding-bottom: 16rpx;
}
.his-date .his-r{
  padding-bottom: 40rpx;
}
.his-row .his-r{
  padding-bottom: 50rpx;
}
.his-group .his-row:last-child .his-r{
  padding-bottom: 0;
}
.his-group .his-row .his-r.bottom{
  padding-bottom: 0;
}
.his-space .his-r{
  /*border-left: dotted 4rpx #FF7D76;*/
  border-left: dotted 4rpx #FF7D76;
  height: 70rpx;
  margin-top: -10rpx;
}
.his-bmask{
  width: 4rpx;
  height: 14rpx;
  background-color: #fff;
  position: absolute;
  bottom: 0rpx;
  left: 274rpx;
  z-index: 4;
}
.nodata{
  font-size: 30rpx;
  padding: 30rpx 40rpx;
  color: #333333;
}