
<view class='std-tit'>
  <image class='std-img' src='{{CDN_URL}}/img/std.png'></image>
  <image class="std-vol" src="{{volSwitch ? '/img/'+theme[curTheme-1].tit+'_on.png':'/img/'+theme[curTheme-1].tit+'_off.png'}}" bindtap="bindVolSwitch"></image>
</view>
<view class='std-stit' bindtap="bindTapInfo">
  <text>孕周{{weeks}}{{days > 0 ? '+' + days + '天' : '周'}}，预产期是{{birthDateStr}}</text>
  <image class='icon-info' src='{{CDN_URL}}/img/icon_info.png'></image>
</view>


<view class="std-mbg">

  <image class="std-svg {{playing ? 'an-svg' : ''}}1" src="/img/{{theme[curTheme-1].tit}}1.svg"></image>
  <image class="std-svg {{playing ? 'an-svg' : ''}}2" src="/img/{{theme[curTheme-1].tit}}2.svg"></image>
  <image class="std-svg {{playing ? 'an-svg' : ''}}3" src="/img/{{theme[curTheme-1].tit}}3.svg"></image>

  <view class="std-bg theme{{curTheme}}"></view>

    <!--未开始-->
    <block wx:if="{{status==0}}">
      <view class="std-main theme{{curTheme}}" bindtap="bindTapStart">
        <view class="stdm-tit">开始计数</view>
        <image class="stdm-btn" src="{{CDN_URL}}/img/play.png"></image>
        <view class="stdm-stxt">5分钟内点击算1次</view>
      </view>
    </block>

    <!--计数中 -->
    <block wx:elif="{{status==1}}">
      <view class="std-bga {{wave}} theme{{curTheme}}"></view>
      <view class="std-main theme{{curTheme}}" bindtap="bindTapCount">
        <view class="stdm-txt">动一下 / 点一下</view>
        <view class="stdm-time">{{timeStr}}</view>
        <view class="stdm-stxt">5分钟内点击算1次</view>
      </view>
    </block>

      <!--结束-->
    <block wx:elif="{{status==2}}">
      <view class="std-main theme{{curTheme}}" bindtap="bindTapRestart">
        <view class="stdm-atxt">点击重新计胎动</view>
        <view class="stdm-atit">{{validHit < 3 ? '胎动偏少' : '胎动正常' }}</view>
        <view class="stdm-astit">有效<text>{{validHit}}</text>次</view>
      </view>
    </block>

